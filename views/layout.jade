doctype 5
html
	head
		meta (name='viewport' content="width=960px, height=device-height")
		link(rel='stylesheet', href='css/bootstrap.min.css')
		link(rel='stylesheet', href='css/bootstrap-responsive.min.css')
		script(src='js/jquery-1.8.3.min.js')
		script(src='js/bootstrap.min.js')
		script(src='js/jquery.isotope.min.js')
		title= 'PuertoRicoByPuertoRicans'
		link(rel='stylesheet', href='css/gallery.css')
		link(rel='stylesheet', href='css/style.css')
		script.
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
				(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
				m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
				ga('create', 'UA-39908729-7', 'puertoricobypuertoricans.com');
				ga('send', 'pageview');

	body
		div#mainLoader.hide
			#loaderImage
				p Cargando
		div#mainNavbar.toHide
			a(href='/galeria')
				img#logo(src='img/logo-main.png')
			div.pull-right#subTITLE
				img(src='/img/subtitle.png')
			div.pull-right#socialShareLayout
				-var facebookLink = 'http://www.facebook.com/sharer.php?s=100&p[title]=Puerto Rico by Puerto Ricans&p[summary]=¡Pon a Puerto Rico en el Mapa!&p[url]=http://puertoricobypuertoricans.com&p[images][0]=http://puertoricobypuertoricans.com/img/logo.png'
				a#facebookShareBTN(href=facebookLink, target="_blank", onclick="return !window.open(this.href, 'Facebook', 'width=640,height=300')")
					img(src='/img/shareFB.png')
				//div#twitterHack(style='background-image:url("/img/shareTW.png"); width:15px; height:15px;')
				a.twitter-share-button(href="https://twitter.com/share", data-count="none", target="_blank")
					img(src='/img/shareTW.png')
					script.
						//!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');

				a(href='https://plus.google.com/share?url=http://puertoricobypuertoricans.com/entry/'+publicID, onclick="javascript:window.open(this.href,'', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")
					img(src='/img/shareG+.png', alt='Share on Google+')
		.btn-group.pull-right.toHide(style='margin-right: 60px')
			if authentification
				a.btn.Trebuchet.loginBTN2(href='/salir', title='logout') Salir
			else
				a.btn.Trebuchet.loginBTN2(href='/entrar', title='') SIGN-IN para VOTAR
			a.btn.Trebuchet.participaBTN2(href='/participa', title='') Participa

		.btn-group.toHide(style='margin-left:60px')
			a.btn.RockwellStd.mainBTNS#queSomosBTN(href='/quesomos') Qué Somos
			a.btn.RockwellStd.mainBTNS#comoBTN(href='/comoparticipar') Cómo Participar
			.btn-group
				a.btn.Trebuchet.mainBTNS.dropdown-toggle.btn-categorias(data-toggle='dropdown', href='#') Categorias
				ul.Trebuchet.dropdown-menu
					li
						a#favoritos(href='/favoritos') Favoritos
					-var cats = ['Playas', 'Paisajes', 'Gente', 'Íconos de PR', 'Cultura', 'Histórico','Urbano','Pueblos','Flora y Fauna','Gastronomía','Festividades','Arquitectura','Deportes'];
					each cat, i in cats
						-var ctr = i+1
						li
							a(href='/categoria/'+ctr ) #{cat}
			
				
		block content
